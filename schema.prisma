datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        String      @id @default(auto()) @map("_id") @db.ObjectId
    email     String
    password  String
    firstName String
    lastName  String
    phone     String?
    dob       DateTime?
    address   String?
    createdAt DateTime?   @default(now())
    updatedAt DateTime?   @updatedAt
    Objective Objective[]
}

model Objective {
    id          String        @id @default(auto()) @map("_id") @db.ObjectId
    name        String
    type        ObjectiveType
    description String
    deadline    DateTime
    progress    Float
    createdAt   DateTime?     @default(now())
    updatedAt   DateTime?     @updatedAt
    User        User          @relation(fields: [userId], references: [id])
    userId      String        @db.ObjectId
    KeyResult   KeyResult[]
}

model KeyResult {
    id          String    @id @default(auto()) @map("_id") @db.ObjectId
    name        String
    description String
    deadline    DateTime
    progress    Float
    createdAt   DateTime? @default(now())
    updatedAt   DateTime? @updatedAt
    Objective   Objective @relation(fields: [objectiveId], references: [id])
    objectiveId String    @db.ObjectId
    History     History[]
}

model History {
    id          String    @id @default(auto()) @map("_id") @db.ObjectId
    message     String
    createdAt   DateTime? @default(now())
    progress    Float
    KeyResult   KeyResult @relation(fields: [keyResultId], references: [id])
    keyResultId String    @db.ObjectId
}

enum ObjectiveType {
    BREAKTHROUGH
    COMMIT
}
